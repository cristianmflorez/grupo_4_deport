<!DOCTYPE html>
<html lang="es">
    <%-include( './partials/head') %>
<body>

    <%-include( './partials/header') %>

    <%-include( './partials/nav') %>

    <main class="container">
        <h2 class="p-3 text-center">Tu carrito de compras.</h2>

    </main>

    <section class="d-flex flex-column flex-sm-row justify-content-center" style="background-color: #eee;">
        <div class="detalleCompra py-1 mt-2 w-100">
        </div>

        <aside class="shop my-3 m-1 p-3 border border-secondary  w-auto rounded-1">
            <div class="shop__header">
                <h3 class="shop__title">Resumen de Carrito</h3>
                <p class="shop__text">
                    <a class="button js-toggle-cart" href="#" title="View cart">
                    </a>
                </p>
            </div>

            <div class="shop__products m-3">
                <div class="products">
                    
                </div>
            </div>

            <div class="products__total  m-3 d-flex justify-content-between align-items-center">
                <p class="products__total-info text-capitalize fw-bold">Total</p>
                <p class="precioTotal fw-bold text-success"></p>
            </div>
        </aside>
    </section>

    <div class="lightbox js-lightbox js-toggle-cart"></div>
    
    <%-include( './partials/footer') %>
