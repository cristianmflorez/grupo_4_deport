<header class="d-none d-md-flex">
	<div
		class="list-group list-group-horizontal d-flex justify-content-between container-fluid"
		id="barra-header-superior"
	>
		<a href="/">
			<img
				src="/imagenes/others/logo.png"
				class="border border-0 p-3"
				style="width: 200px"
				alt="Logo"
			/>
		</a>
		<ul class="list-group list-group-horizontal">
			
				<% if (locals.isLogged) { %>
					<li class="list-group-item row border border-0 pt-0">
						<a
							href="/users/perfil"
							class="list-group-item list-group-item-action border border-0 pt-3"
						>
							Mi perfil
						</a>
					</li>
					<li class="list-group-item row border border-0 pt-0">
						<a
							href="/users/logout"
							class="list-group-item list-group-item-action border border-0 pt-3"
						>
							Cerrar sesión
						</a>
					</li>
				<% } else { %>
					<li class="list-group-item row border border-0 pt-0">
						<a
							href="/users/login"
							class="list-group-item list-group-item-action border border-0 pt-3"
						>
							Ingresar/Registrarse
						</a>
					</li>
					
				<% } %>


			<li class="list-group-item border border-0 pt-2">
				<select class="form-select" aria-label="Default select example">
					<option selected>Tu ubicación</option>
					<option value="Argentina">Argentina</option>
					<option value="Bolivia">Bolivia</option>
					<option value="Brasil">Brasil</option>
					<option value="Chile">Chile</option>
					<option value="Colombia">Colombia</option>
					<option value="Ecuador">Ecuador</option>
					<option value="Paraguay">Paraguay</option>
					<option value="Peru">Perú</option>
					<option value="Uruguay">Uruguay</option>
					<option value="Venezuela">Venezuela</option>
				</select>
			</li>

			<li class="list-group-item border border-0 fs-2 pt-0">
				<a
					href="/carrito"
					class="list-group-item list-group-item-action border border-0 pt-0"
				>
					<i class="bi bi-cart4"></i>
				</a>
			</li>
		</ul>
	</div>
</header>
