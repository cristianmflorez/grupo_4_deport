<!DOCTYPE html>
<html lang="es">
	<%-include( '../partials/head') %>
	<body>
		<%-include( '../partials/header') %> <%-include( '../partials/nav') %>

		<main class="container">
			<h2 class="p-3 text-center">Acceder a tu cuenta</h2>
			<form action="" method="post">
				<div class="mb-3">
					<label for="correo" class="form-label text-primary"
						><strong>Correo electronico</strong></label
					>
					<input
						type="email"
						class="form-control"
						id="correo"
						placeholder="test@gmail.com"
						required
					/>
				</div>

				<div class="mb-3">
					<label for="password" class="form-label text-primary"
						><strong>Contraseña</strong></label
					>
					<div class="input-group">
						<input type="password" class="form-control" id="password" />
						<button class="btn btn-outline-dark" type="button">
							<i class="bi bi-eye"></i>
						</button>
					</div>
				</div>

				<div class="mb-3 d-flex justify-content-between">
					<a href="./registro">Crear cuenta</a>
					<a href="./password">Olvidé contraseña</a>
				</div>

				<div class="mb-3 d-flex justify-content-between">
					<a href="./../" class="btn btn-secondary col-4">Volver</a>
					<button type="submit" class="btn btn-secondary col-4">Entrar</button>
				</div>
			</form>
		</main>

		<%-include( '../partials/footer') %>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
			crossorigin="anonymous"
		></script>
	</body>
</html>
