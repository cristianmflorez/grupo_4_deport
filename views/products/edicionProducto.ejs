<!DOCTYPE html>
<html lang="es">
	<%-include('../partials/head') %>
	<body>
		<%-include('../partials/header') %> <%-include('../partials/nav') %>

		<main class="d-flex justify-content-around mx-auto flex-wrap">
			<form class="w-75" action="<%=producto.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
				<h2 class="p-3 text-center">Editar: <%=producto.name%></h2>

				<div class="mb-3">
					<label for="titleArticle" class="form-label text-primary"
						><strong>Nombre/Referencia del artículo</strong></label
					>
					<input
						type="text"
						name="name"
						class="form-control"
						id="titleArticle"
						value="<%=producto.name%>"
						required
					>
				</div>

				<div class="mb-3 d-flex justify-content-between flex-column flex-sm-row">
					<div>
						<label for="priceArticle" class="form-label text-primary">
							<strong>Precio $</strong>
						</label>
					<input
						type="number"
						name="price"
						class="form-control"
						id="priceArticle"
						value="<%=producto.price%>"
						required
						/>
					</div>
					<div>
						<label for="nameArticle" class="form-label text-primary">
							<strong>Descuento %</strong>
						</label>
						<input
							type="number"
							name="discount"
							class="form-control"
							id="nameArticle"
							value="<%=producto.discount%>"
							required
						/>
					</div>
				</div>

				<div class="mb-3">
					<label for="descriptionTextarea" class="form-label text-primary">
						<strong>Descripción</strong>
					</label>
					<textarea
						class="form-control"
						name="description"
						id="descriptionTextarea"
						required><%=producto.description%></textarea>
				</div>

				<div class="mb-3 d-flex justify-content-between flex-column flex-md-row">
					<div>
						<label for="materialArticle" class="form-label text-primary">
							<strong>Material</strong>
						</label>
						<input
							type="text"
							name="material"
							class="form-control"
							id="materialArticle"
							value="<%=producto.specifications[0]%>"
							required
						/>
					</div>

					<div>
						<div>
							<label for="weightArticle" class="form-label text-primary">
								<strong>Peso</strong>
							</label>
							<input
								type="text"
								name="weight"
								class="form-control"
								id="weightArticle"
								value="<%=producto.specifications[1]%>"
								required
							/>
						</div>
					</div>

					<div>
						<label for="originArticle" class="form-label text-primary">
							<strong>Origen</strong>
						</label>
						<input
							type="text"
							name="origin"
							class="form-control"
							id="originArticle"
							value="<%=producto.specifications[2]%>"
							required
						/>
					</div>
				</div>

				<div class="mb-3 d-flex justify-content-between flex-column flex-md-row">
					<div>
						<label for="" class="form-label text-primary">
							<strong>Categoría</strong>
						</label>
						<select class="form-select" name="category" required aria-label="select example">
							<option value="">Selecciona un deporte</option>
							<option value="futbol" <%=producto.category=="futbol"? "selected" : ""%>> Fútbol</option>
							<option value="basketball" <%=producto.category=="basketball"? "selected" : ""%>>Basketball</option>
							<option value="tenis" <%=producto.category=="tenis"? "selected" : ""%>>Tenis</option>
							<option value="voleyball" <%=producto.category=="voleyball"? "selected" : ""%>>Voleyball</option>
							<option value="natacion" <%=producto.category=="natacion"? "selected" : ""%>>Natación</option>
							<option value="Otros" <%=producto.category=="Otros"? "selected" : ""%>>Otros</option>
						</select>
					</div>
					<div>
						<label for="" class="form-label text-primary">
							<strong>Tipo</strong>
						</label>
						<select class="form-select" name="type" required aria-label="select example">
							<option value="">Selecciona una categoría</option>
							<option value="vestuario" <%=producto.type=="vestuario"? "selected" : ""%>>Vestuario</option>
							<option value="zapatillas" <%=producto.type=="zapatillas"? "selected" : ""%>>Zapatillas</option>
							<option value="implementos" <%=producto.type=="implementos"? "selected" : ""%>>Implementos</option>
						</select>
					</div>
					
				</div>

				<div class="mb-3">
					<label for="colorArticle" class="form-label text-primary">
						<strong>Color (en inglés)</strong>
					</label>
					<input
						type="text"
						name="color"
						class="form-control"
						id="colorArticle"
						value="<%=producto.color%>"
						required
					/>
				</div>

				<div class="mb-3">
					<label for="" class="form-label text-primary">
						<strong>Imagen (opcional)</strong></label>
					<input
						type="file"
						name="image"
						class="form-control"
						aria-label="file example"
					/>
				</div>

				<div class="d-flex justify-content-between flex-column flex-md-row mt-5">
					<button class="btn btn-secondary col-3 w-auto mt-2" type="submit">
						Editar producto
					</button>
					<button class="btn btn-secondary col-3 w-auto mt-2" type="reset">
						Cancelar
					</button>
				</div>
			</form>
			<form action="/products/delete/<%=producto.id%>?_method=delete" method="post" class="w-75 d-flex flex-column flex-md-row">
				<button type="submit" class="btn btn-danger col-3 w-auto mt-2 mb-5">
					Eliminar producto
				</button>
			</form>
		</main>

		<%-include('../partials/footer') %>
	</body>
</html>
